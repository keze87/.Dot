# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

font pango:Cantarell Regular, FontAwesome 10

gaps inner 4
gaps outer 4

for_window [class="onboard"] floating enable
for_window [class="Onboard"] floating enable
for_window [class="hl2_linux"] floating disable
for_window [class="hl2_linux"] move container to workspace "TF2"
for_window [class="hl2_linux"] focus

exec --no-startup-id numlockx

bindsym Mod1+Prior exec --no-startup-id "amixer set Master 5%+"
bindsym Mod1+Next exec --no-startup-id "amixer set Master 5%-"

#bindsym $mod+l exec sh ~/.config/i3/lariza.sh
bindsym $mod+l exec lariza

exec --no-startup-id sh ~/.config/i3/barcolor.sh

bindsym $mod+m exec --no-startup-id sh ~/.config/i3/monitor.sh

# Focus the big output
bindsym Mod1+1 focus output DVI-I-0
bindsym Mod1+2 focus output HDMI-0
